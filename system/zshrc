prompt_status() {
  prompt_icon="ðŸ "
  if [[ $RETVAL -ne 0 ]]; then
    prompt_icon="ðŸ¦ˆ"
  fi

  [[ -n "$prompt_icon" ]] && prompt_segment black default "$prompt_icon"
}

prompt_context() {
  if [[ "$USERNAME" != "$DEFAULT_USER" || -n "$SSH_CLIENT" ]]; then
    prompt_segment black default "%(!.%{%F{yellow}%}.)%n"
  fi
}

